<%= erb :'layouts/_header' %>

  <img src="http://<%= @pigeon.color.delete("[],\"").split.first %>pigeon.jpg.to/" width="300">

  <!-- show attributes for a single pigeon here -->
  <ul>
    <li>Name: <%= @pigeon[:name] %></li>
    <li>Color: <%= @pigeon[:color] %></li>
    <li>Lives: <%= @pigeon[:lives] %></li>
    <li>Genre: <%= @pigeon[:genre] %></li>
    <a class="button" href="/pigeons/<%= @pigeon[:id] %>/edit">Edit Pigeon</a>
  </ul>

  <form action="/pigeons/<%=@pigeon.id%>" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Pigeon?">
  </form>

<%= erb :'layouts/_footer' %>
